{% extends 'base.html.twig' %} {% block title %}Connexion!{% endblock %} {% block body %}
<div class="container mt-4">
    {% if error%}
    <ul class="alert alert-danger">
        <li>{{ error.messageKey|trans(error.messageData,'security')}}</li>
        <li> Si vous n'avez pas de compte <a class="btn btn-primary" href="
            {{ path('inscription')}}">inscrivez-vous</a></li>
    </ul>
    {% endif %}
    <form action="{{ path('user_connexion')}}" method='post'>
        <div class="form-group">
            <label for="">Nom Utilisateur</label>
            <input class="form-control" type="text" name="_username">
        </div>
        <div class="form-group">
            <label for="">Mot de passe</label>
            <input class="form-control" type="password" name="_password">
        </div>
        <button class="btn btn-primary" type='submit'>Se Connecter</button>
    </form>

</div>{% endblock %}